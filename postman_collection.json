            "body": {
              "mode": "raw",
              "raw": "{\n  \"clerkUserId\": \"user_2abc123def456\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phoneNumberPrefix\": \"+1\",\n  \"phoneNumber\": \"5551234567\",\n  \"nationality\": \"United States\",\n  \"dateOfBirth\": \"1990-05-15\"\n}"
