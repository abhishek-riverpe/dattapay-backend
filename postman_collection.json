            "method": "GET",
            "header": [
              {
                "key": "x-api-token",
                "value": "{{adminToken}}",
                "type": "text"
              },
              {
                "key": "x-auth-token",
                "value": "{{authToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
